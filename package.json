{
  "name": "@noobforal/openphone-api-sdk",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.2",
  "description": "Unofficial TypeScript SDK for OpenPhone Public API (AI-generated - use with caution)",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "scripts": {
    "build": "npm run generate:types && npm run build:types && npm run build:js",
    "generate:types": "npx openapi-typescript openapi.json -o src/types.ts",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:js": "tsc --project tsconfig.build.json",
    "build:js:bun": "bun build src/index.ts --outdir dist --format esm --target bun",
    "dev": "node --loader ts-node/esm src/index.ts",
    "dev:bun": "bun run src/index.ts",
    "test": "node --loader ts-node/esm src/test.ts",
    "test:bun": "bun run src/test.ts",
    "test:watch": "node --loader ts-node/esm --watch src/test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "ci": "npm run generate:types && npm run lint && npm run format:check && npm run type-check && npm run test && npm run build",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "check-updates": "node scripts/check-updates.js",
    "monitor-changelog": "node scripts/monitor-changelog.js",
    "setup-dev": "node scripts/setup-dev.js"
  },
  "keywords": [
    "openphone",
    "api",
    "sdk",
    "typescript",
    "phone",
    "calls",
    "messages",
    "voip"
  ],
  "author": "OpenPhone Support <support@openphone.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openphone/openphone-api-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/openphone/openphone-api-sdk/issues"
  },
  "homepage": "https://github.com/openphone/openphone-api-sdk#readme",
  "dependencies": {
    "openapi-fetch": "^0.14.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.23.4",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "openapi-typescript": "^7.9.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}